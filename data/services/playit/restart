#/bin/bash

echo "Restarting Playit!"

start-stop-daemon --stop --pidfile "/var/run/playit.pid"
start-stop-daemon --start --background --exec "/usr/local/extra/playit" --make-pidfile --pidfile "/var/run/playit.pid" -- --secret_wait --secret_path /root/.config/playit/playit.toml -l /var/log/proxy/playit.log--secret_wait --secret_path /root/.config/playit/playit.toml -l /var/log/proxy/playit.log >> /var/log/proxy/playit_service.log 2>&1

sleep 10

if [ -f "/var/run/playit.pid" ]; then
    exec /usr/local/extra/discord
fi

echo "Restarted!"
